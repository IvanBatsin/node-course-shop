<h1>Profile</h1>

{{#if error}}
<p class="alert">{{error}}</p>
{{/if}}

<div class="row">
  <div class="col s6">
    {{#if user.avatarUrl}}
    <img src="/{{user.avatarUrl}}" class="avatar" alt="avatar-{{user.name}}">
    {{else}}
      <p>None avatar</p>
    {{/if}}
  </div>
  <div class="col s6">
    <form action="/profile" method="post" enctype="multipart/form-data">
      <p>Your email: <strong>{{user.email}}</strong></p>

      <div class="input-field">
        <input id="name" type="text" class="validate" required name="name" value="{{user.name}}">
        <label for="name">Profile name</label>
        <span class="helper-text" data-error="Enter name"></span>
      </div>

      <div class="file-field input-field">
        <div class="btn">
          <span>Avatar</span>
          <input type="file" name="avatar">
        </div>
        <div class="file-path-wrapper">
          <input class="file-path validate" type="text">
        </div>
      </div>

        <input type="hidden" name="_csrf" value="{{csrf}}">

        <button type="submit" class="btn">Change</button>
    </form>
  </div>
</div>