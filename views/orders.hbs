<h1>My orders</h1>

{{#if orders.length}}
  {{#each orders}}
    <div class="row">
      <div class="col s6 offset-s3">
        <div class="card">
          <div class="card-content">
            <span class="card-title"><small>Order id: {{_id}}</small></span>
            <p class="date">{{date}}</p>
            <p><em>Name: {{user.name}}</em> email: ({{user.userId.email}})</p>
            <ol>
              {{#each course}}
                <li>
                  {{courses.title}} (x<strong>{{count}}</strong>)
                </li>
              {{/each}}
            </ol>
            <hr>
            <p>Total price: <span class="price big">{{price}}</span></p>
          </div>
        </div>
      </div>
    </div>
  {{/each}}
{{else}}
  <h3>You dont have any orders</h3>
{{/if}}