<h2>Edit {{course.title}} course</h2>

<form action="/courses/edit" method="POST" class="course-form" novalidate>
  <div class="input-field">
    <input id="title" type="text" class="validate" required name="title" value="{{course.title}}">
    <label for="title">Course title</label>
    <span class="helper-text" data-error="Enter title"></span>
  </div>

  <div class="input-field">
    <input id="price" type="number" class="validate" required min="1" name="price" value="{{course.price}}">
    <label for="price">Course price</label>
    <span class="helper-text" data-error="Enter your price"></span>
  </div>

  <div class="input-field">
    <input id="image" type="text" class="validate" required name="image" value="{{course.image}}">
    <label for="image">Image url</label>
    <span class="helper-text" data-error="Enter image url"></span>
  </div>

  <input type="hidden" name="id" value="{{course._id}}">

  <input type="hidden" name="_csrf" value="{{csrf}}">

  <button type="submit" class="btn btn-primary">Edit course</button>
</form>

<form action="/courses/remove" method="POST">
  <input type="hidden" name="_csrf" value="{{csrf}}">
  <input type="hidden" name="id" value="{{course._id}}">
  <button type="submit" class="btn red">Remove course</button>
</form>