<h2>Add course</h2>

{{#if error}}
  <p class="alert">{{error}}</p>
{{/if}}

<form action="/add" method="POST">
  <div class="input-field">
    <input id="title" type="text" class="validate" required name="title" value="{{data.title}}">
    <label for="title">Course title</label>
    <span class="helper-text" data-error="Enter title"></span>
  </div>

  <div class="input-field">
    <input id="price" type="number" class="validate" required min="1" name="price" value="{{data.price}}">
    <label for="price">Course price</label>
    <span class="helper-text" data-error="Enter your price"></span>
  </div>

  <div class="input-field">
    <input id="image" type="text" class="validate" required name="image" value="{{data.image}}">
    <label for="image">Image url</label>
    <span class="helper-text" data-error="Enter image url"></span>
  </div>

  <input type="hidden" name="_csrf" value="{{csrf}}">

  <button class="btn btn-primary">Add course</button>
</form>