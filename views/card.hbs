<h1>Card page</h1>

<div id="card">
  {{#if courses.length}}
    <table>
      <thead>
        <tr>
          <th>Course title</th>
          <th>Amount</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        {{#each courses}}
          <tr>
            <td>{{courseId.title}}</td>
            <td>{{count}}</td>
            <td><button class="btn btn-small js-remove" data-id="{{id}}" data-csrf="{{@root.csrf}}">Remove</button></td>
          </tr>
        {{/each}}
      </tbody>
    </table>
    <p><strong>Price:</strong><span class="price">{{price}}</span></p>

    <form action="/order" method="POST">
      <button type="submit" class="btn">Get order</button>

      <input type="hidden" name="_csrf" value="{{csrf}}">
    </form>
  {{else}}
    <h4>Card is empty</h4>
  {{/if}}
</div>